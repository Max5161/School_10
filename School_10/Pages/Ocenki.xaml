      xmlns:local="clr-namespace:School_10.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ocenki" Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="3" HorizontalAlignment="Right"
                Name="BntSave" Click="BntSave_Click"
                Content="Сохранить" Style="{StaticResource Buttonstule}"></Button>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="TboxSerch" Width="150" Margin="5" Style="{StaticResource TextboxStul}" ></TextBox>
        </StackPanel>


        <DataGrid Grid.Row="2" IsReadOnly="True" AutoGenerateColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1} {2} {3}">
                            <Binding Path="Ucheniki.Uchenik_ID"></Binding>
                            <Binding Path="Ucheniki.Familia"></Binding>
                            <Binding Path="Ucheniki.Name"></Binding>
                            <Binding Path="Ucheniki.Otchestvo"></Binding>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="" Binding="{Binding Uroki.Predmeti.Name}"/>

                <DataGridTextColumn Header="" Binding="{Binding Uroki.Date}"/>
                <DataGridTextColumn Header="" Binding="{Binding Uroki.Klassi.Name}"/>
                <DataGridTextColumn Header="" Binding="{Binding Uroki.Thema}"/>
                <DataGridTextColumn Header="" Binding="{Binding Uroki.Home_work}"/>
                
            </DataGrid.Columns>
        </DataGrid>
        
